#include<bits/stdc++.h>
#define lli long long int
using namespace std;
int main()
{
   int testcases;
   cin>>testcases;
   while(testcases--)
   {
    lli n,k,x;
    cin>>n>>k>>x;
    lli sum1=(k*(k+1))/2;
    lli sum2=(n*(n+1))/2;
    lli total_sum=sum2-((n-k)*(n-k+1))/2;
    if(x>=sum1 && x<=total_sum)
    {
        cout<<"YES"<<endl;
    }
    else
    {
        cout<<"NO"<<endl;
    }
   }
}
