#include<bits/stdc++.h>
#define lli long long int
using namespace std;
int main()
{
    int testcases;
    cin>>testcases;
    while(testcases--)
    {
        lli n;
        cin>>n;
        lli count=0;
        string s;
        cin>>s;
        for(lli i=0;i<n;i++)
        {
            if(s[i]=='+')
            {
                count++;
            }
            else
            {
                count--;
            }
        }
        cout<<abs(count)<<endl;
    }
}
